{
  "$schema": "https://railway.com/railway.schema.json",
  "deploy": {
    "startCommand": "bun run ponder:start"
  },
  "build": {
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["bun"],
          "aptPkgs": ["build-essential"]
        },
        "install": {
          "dependsOn": ["setup"],
          "cmds": ["bun install"]
        }
      }
    }
  }
}
