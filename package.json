{
	"name": "vono",
	"private": "true",
	"type": "module",
	"workspaces": ["packages/*"],
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"scripts": {
		"dev": "bun --filter 'db' dev & bun --filter 'server' dev & bun --filter 'indexer' dev & bun --filter 'web' dev",
		"format": "bunx @biomejs/biome format --write .",
		"indexer:start": "bun --filter 'indexer' start",
		"db:migrate": "bun --filter 'db' migrate",
		"server:install": "bun --filter 'server' install",
		"server:start": "bun --filter 'server' start"
	},
	"packageManager": "^bun@1.2.0"
}
